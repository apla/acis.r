
<acis:fields xmlns:acis="http://acis.openlib.org"
             >

  <!-- 

  This is for fields, which are either required or have very specific 
  syntax rules, so that a user may enter an "invalid" value.

  -->


 <acis:field name='login'>
  <acis:desc>login name (email address)</acis:desc>
 </acis:field>

 <acis:field name='pass'>
    <acis:desc>password (must be at least 6 characters long)</acis:desc>
 </acis:field>

 <acis:field name='pass-confirm'>
    <acis:desc>password confirmation (must match the password)</acis:desc>
 </acis:field>

 <acis:field name='first-name'>
  <acis:desc>first name</acis:desc>
 </acis:field>

 <acis:field name='middle-name'>
  <acis:desc>middle name</acis:desc>
 </acis:field>
 
 <acis:field name='last-name'>
  <acis:desc>last name</acis:desc>
 </acis:field>
 
 <acis:field name='name-suffix'>
  <acis:desc>name suffix</acis:desc>
 </acis:field>
 
 <acis:field name='email'>
  <acis:desc>email address</acis:desc>
 </acis:field>

 <acis:field name='homepage'>
  <acis:desc>personal homepage address</acis:desc>
 </acis:field>


 <acis:field name='phone'>
  <acis:desc>phone number</acis:desc>
 </acis:field>
 
 <acis:field name='full-name'>
  <acis:desc>personal full name</acis:desc>
 </acis:field>
 
 <acis:field name='postal'>
  <acis:desc>postal address</acis:desc>
 </acis:field>

 <acis:field name='name-variations'>
  <acis:desc>variations of the name</acis:desc>
 </acis:field>

 <acis:field name='name-latin'>
  <acis:desc>personal name in latin letters</acis:desc>
 </acis:field>

 <acis:field name='name'>
  <acis:desc>account owner name</acis:desc>
 </acis:field>


 <acis:field name='id-date-year'>
  <acis:desc>year number of the identification date</acis:desc>
 </acis:field>

 <acis:field name='id-date-month'>
  <acis:desc>month number of the identification date</acis:desc>
 </acis:field>

 <acis:field name='id-date-day'>
  <acis:desc>day number of the identification date</acis:desc>
 </acis:field>

 <acis:field name='iddate-unreal'>
   <acis:desc>identification date is not a real date</acis:desc>
 </acis:field>

</acis:fields>